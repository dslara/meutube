{
  "name": "ui",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm:watch:css\" \"npm:start\"",
    "start": "tsc --watch",
    "build": "tsc",
    "build:css": "npx @tailwindcss/cli -i ./src/styles/input.css -o ../../apps/backend/public/output.css --minify",
    "watch:css": "npm run build:css --watch"
  },
  "dependencies": {
    "alpinejs": "^3.15.2",
    "react": "^19.2.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@tailwindcss/cli": "^4.1.17",
    "@types/alpinejs": "^3.13.11",
    "@types/react": "19.2.2",
    "concurrently": "^9.2.1"
  }
}
